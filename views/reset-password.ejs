<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <div class="container">
      <%- include('partials/navigation')%>
      <form class="main-form" data-reset-password-form="">
        <div class="ver-spacer">
          <div>
            <label for="email">Email</label>
            <input type="email" id="email" required />
          </div>
          
          <div>
              <label for="password">New Password</label>
              <input type="password" id="new-password" autocomplete="new-password" minlength="8" required />
          </div>
            
          <div class="verification-code-field">
              <label for="verification-code">Verification Code</label>
            
               <div class="separetor">
                  <input type="number" id="verification-code" minlength="6" maxlength="6" required />
                  <button class="btn-accent b-margin-top" data-send-verification-code-btn="">Send</button>
                </div>
           </div>
            
        <button class="btn-accent b-margin-top" type="submit">Change</button>
      </form>
      <!-- prettier-ignore -->
      <a href="#" class="btn-dark checkout-btn ai-c"><span>Checkout</span> <span class="checkout-btn__left-column ai-c"><span>3<span class="green-accent">x</span></span> <span>Total: <span class="green-accent">45$</span></span></span></a>
    </div>
  </body>
</html>
