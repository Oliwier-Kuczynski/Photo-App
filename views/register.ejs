<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
    <div class="container">
      <%- include('partials/navigation')%>
      <form class="main-form" data-register-form="">
        <div class="ver-spacer">
          <div>
            <label for="name">Name</label>
            <input type="fname" id="name" required />
          </div>

          <div>
            <label for="email">Email</label>
            <input type="email" id="email" required />
          </div>

          <div>
            <label for="password">Password</label>
            <input type="password" id="password" minlength="8" required />
          </div>

          <div class="separetor ai-c">
            <p>
              I agree to the
              <a href="#" class="green-accent">terms of service</a>
            </p>
            <input type="checkbox" value="true" id="agreed" />
          </div>
        </div>

        <button class="btn-accent b-margin-top" type="submit">Register</button>
      </form>
      <!-- prettier-ignore -->
      <a href="#" class="btn-dark checkout-btn ai-c"><span>Checkout</span> <span class="checkout-btn__left-column ai-c"><span>3<span class="green-accent">x</span></span> <span>Total: <span class="green-accent">45$</span></span></span></a>
    </div>
  </body>
</html>
